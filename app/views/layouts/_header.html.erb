<nav class="navbar">
  <!-- Togglable sidebar naviation menu -->
  <%= render "layouts/sidebar" %>

  <!-- navigation search form, only shows after being toggled on -->
  <div id="nav-search">
    <div class="nav-search-container">
      <%= form_with url: recipes_path, method: :get, local: true, class: "nav-search-form" do |f| %>
        <div class="form-group">
          <%= f.label :search, class: "sr-only" %>
          <div class="nav-search-box">
            <%= f.text_field :search, placeholder: "What would you like to eat...?" %>
            <!-- Allow user to close the search bar -->
            <%= button_tag type: "button", onclick: "closeNavSearch()", id: "close-nav-search", class: "nav-btn" do %>
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                <path d="M0 0h24v24H0z" fill="none"/>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="main-nav">
    <div class="nav-container">
      <%= button_tag onclick: "expandNav()", class: "nav-btn", id: "mobile-nav-expand" do %>
        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg>
      <% end %>
      <%= link_to root_path, class: "logo-container" do %>
        <div class="logo"><%= render "layouts/logo" %></div>
        <span class="logo-text">cookbook</span>
      <% end %>
    </div>

    <div class="nav-container">
      <% unless user_signed_in? %>
        <%= link_to "Log in", new_user_session_path, class: "btn" %>
        <%= link_to "Sign up" , new_user_registration_path, class: "btn btn-primary" %>
      <% else %>
        <%= link_to user_path(current_user), class: "nav-btn" do %>
          <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
        <% end %>
      <% end %>
      <%= button_tag onclick: "expandNavSearch()", class: "nav-btn", id: "nav-search-expand" do %>
        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
          <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/>
          <path d="M0 0h24v24H0z" fill="none"/>
        </svg>
      <% end %>
    </div>
  </div>

</nav>