<div class="container">
  <div class="recipe-grid">
    <% unless @recipes.empty? %>
      <% @recipes.each do |recipe| %>
        <div class="recipe-card">
          <%= link_to recipe_path(recipe["id"]) do %>
            <div class="recipe-card-image">
              <%= image_for(recipe["id"], :medium) unless recipe["image"].nil? %>
            </div>
          <% end %>

          <div class="recipe-card-info">
            <h2><%= link_to recipe["title"], recipe_path(recipe["id"]) %></h2>
            <div class="recipe-card-meta">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0z" fill="none"/><path d="M15 1H9v2h6V1zm-4 13h2V8h-2v6zm8.03-6.61l1.42-1.42c-.43-.51-.9-.99-1.41-1.41l-1.42 1.42C16.07 4.74 14.12 4 12 4c-4.97 0-9 4.03-9 9s4.02 9 9 9 9-4.03 9-9c0-2.12-.74-4.07-1.97-5.61zM12 20c-3.87 0-7-3.13-7-7s3.13-7 7-7 7 3.13 7 7-3.13 7-7 7z"/></svg>
              <span><%= recipe["readyInMinutes"] %></span>
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M11 9H9V2H7v7H5V2H3v7c0 2.12 1.66 3.84 3.75 3.97V22h2.5v-9.03C11.34 12.84 13 11.12 13 9V2h-2v7zm5-3v8h2.5v8H21V2c-2.76 0-5 2.24-5 4z"/><path d="M0 0h24v24H0z" fill="none"/></svg>
              <span><%= recipe["servings"] %></span>
            </div>
          </div>

          <div class="caret">
            <%= link_to recipe_path(recipe["id"]) do %>
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24">
                <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
                <path d="M0 0h24v24H0V0z" fill="none"/>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>Sorry, there were no recipe results for “<%= @search %>”</p>
    <% end %>
  </div>

  <%= will_paginate @recipes %>
</div>